    <meta charset="UTF-8">
    <title>অ্যাডমিন প্যানেল - আনন্দধারা প্রকল্প</title>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/xlsx/0.18.5/xlsx.full.min.js"></script>
    <style>
        :root { --blue: #0056b3; --green: #217346; }
        body { font-family: 'Segoe UI', Tahoma, sans-serif; background: #eef2f7; padding: 20px; }
        .container { max-width: 1200px; margin: auto; background: white; padding: 25px; border-radius: 12px; box-shadow: 0 4px 15px rgba(0,0,0,0.1); }
        .hidden { display: none; }
        .header-flex { display: flex; justify-content: space-between; align-items: center; margin-bottom: 20px; border-bottom: 2px solid var(--blue); padding-bottom: 10px; }
        .stats { display: grid; grid-template-columns: repeat(auto-fit, minmax(200px, 1fr)); gap: 15px; margin-bottom: 25px; }
        .stat-box { padding: 20px; border-radius: 10px; text-align: center; color: white; font-weight: bold; }
        table { width: 100%; border-collapse: collapse; margin-top: 20px; font-size: 13px; }
        th, td { border: 1px solid #ddd; padding: 10px; text-align: left; }
        th { background: var(--blue); color: white; position: sticky; top: 0; }
        tr:nth-child(even) { background-color: #f9f9f9; }
        .btn { padding: 10px 15px; cursor: pointer; border: none; border-radius: 5px; font-weight: bold; }
        .btn-excel { background: var(--green); color: white; }
        .btn-refresh { background: #007bff; color: white; }
        .filter-bar { display: flex; gap: 10px; margin-bottom: 15px; flex-wrap: wrap; }
        input, select { padding: 8px; border: 1px solid #ddd; border-radius: 5px; }
    </style>
</head>
<body>

<div id="login" class="container" style="max-width: 400px; text-align: center;">
    <h2 style="color: var(--blue);">অ্যাডমিন লগইন</h2>
    <input type="password" id="adminPass" placeholder="মাস্টার পাসওয়ার্ড দিন" style="width: 100%; margin-bottom: 15px;">
    <button onclick="checkLogin()" class="btn btn-refresh" style="width: 100%;">প্রবেশ করুন</button>
</div>

<div id="dashboard" class="container hidden">
    <div class="header-flex">
        <h2 style="color: var(--blue);">আনন্দধারা প্রকল্প - মাস্টার ড্যাশবোর্ড</h2>
        <div>
            <button onclick="exportToExcel()" class="btn btn-excel">Excel ডাউনলোড</button>
            <button onclick="fetchData()" class="btn btn-refresh">রিফ্রেশ ডাটা</button>
        </div>
    </div>

    <div class="stats">
        <div class="stat-box" style="background: #1a73e8;">আজকের উপস্থিতি: <span id="attnCount">0</span></div>
        <div class="stat-box" style="background: #f39c12;">মোট সাবমিশন: <span id="totalSub">0</span></div>
        <div class="stat-box" style="background: #2e7d32;">মোট ডিসবার্সমেন্ট: <span id="totalDis">0</span></div>
    </div>

    <div class="filter-bar">
        <input type="text" id="searchId" onkeyup="filterTable()" placeholder="কর্মচারীর নাম দিয়ে খুঁজুন...">
        <input type="text" id="searchBank" onkeyup="filterTable()" placeholder="ব্যাংকের নাম দিয়ে খুঁজুন...">
        <input type="date" id="dateFilter" onchange="filterTable()">
        <button onclick="resetFilters()" class="btn" style="background:#6c757d; color:white;">ফিল্টার মুছুন</button>
    </div>
    
    <div style="overflow-x: auto;">
        <table id="dataTable">
            <thead>
                <tr>
                    <th>কর্মচারী</th><th>SHG নাম</th><th>গ্রাম</th><th>সাবমিশন তারিখ</th><th>সাবমিশন টাকা</th>
                    <th>লিঙ্কোজ নং</th><th>সভানেত্রী</th><th>মোবাইল</th><th>ব্যাংক</th><th>শাখা</th>
                    <th>সেনশন</th><th>ডিসবার্স</th><th>ডিসবার্স তারিখ</th><th>জমার সময়</th>
                </tr>
            </thead>
            <tbody id="tableBody"></tbody>
        </table>
    </div>
</div>

<script>
    const scriptURL = 'আপনার_গুগল_অ্যাপ_স্ক্রিপ্ট_URL_এখানে'; // আপনার URL এখানে বসান
    const masterPass = 'admin123';
    let rawData = [];

    function checkLogin() {
        if(document.getElementById('adminPass').value === masterPass) {
            document.getElementById('login').classList.add('hidden');
            document.getElementById('dashboard').classList.remove('hidden');
            fetchData();
        } else { alert('ভুল পাসওয়ার্ড!'); }
    }

    function fetchData() {
        const tbody = document.getElementById('tableBody');
        tbody.innerHTML = '<tr><td colspan="14">ডাটা লোড হচ্ছে... অনুগ্রহ করে অপেক্ষা করুন।</td></tr>';
        
        fetch(scriptURL).then(res => res.json()).then(data => {
            rawData = data.reverse();
            renderTable(rawData);
        });
    }

    function renderTable(data) {
        const tbody = document.getElementById('tableBody');
        tbody.innerHTML = '';
        let attn = 0, sub = 0, dis = 0;
        const today = new Date().toISOString().split('T')[0];

        data.forEach(row => {
            // সামারি ক্যালকুলেশন
            if(row[1] === 'ATTENDANCE' && row[13].includes(today)) attn++;
            if(row[1] !== 'ATTENDANCE') {
                sub += parseFloat(row[4]) || 0;
                dis += parseFloat(row[11]) || 0;
            }

            const tr = document.createElement('tr');
            tr.innerHTML = row.map((cell, index) => {
                if(index === 13) return `<td>${new Date(cell).toLocaleString()}</td>`;
                return `<td>${cell || '-'}</td>`;
            }).join('');
            tbody.appendChild(tr);
        });

        document.getElementById('attnCount').innerText = attn;
        document.getElementById('totalSub').innerText = sub.toLocaleString('bn-BD');
        document.getElementById('totalDis').innerText = dis.toLocaleString('bn-BD');
    }

    function filterTable() {
        const nameVal = document.getElementById('searchId').value.toUpperCase();
        const bankVal = document.getElementById('searchBank').value.toUpperCase();
        const dateVal = document.getElementById('dateFilter').value;
        const rows = document.getElementById('tableBody').getElementsByTagName('tr');

        for (let i = 0; i < rows.length; i++) {
            const name = rows[i].cells[0].innerText.toUpperCase();
            const bank = rows[i].cells[8].innerText.toUpperCase();
            const rowDate = rows[i].cells[13].innerText;
            
            const nameMatch = name.includes(nameVal);
            const bankMatch = bank.includes(bankVal);
            const dateMatch = dateVal ? rowDate.includes(dateVal) : true;

            rows[i].style.display = (nameMatch && bankMatch && dateMatch) ? "" : "none";
        }
    }

    function resetFilters() {
        document.getElementById('searchId').value = '';
        document.getElementById('searchBank').value = '';
        document.getElementById('dateFilter').value = '';
        filterTable();
    }

    function exportToExcel() {
        const wb = XLSX.utils.table_to_book(document.getElementById("dataTable"), {sheet: "Anondodhara Report"});
        XLSX.writeFile(wb, "Anondodhara_Report_" + new Date().toLocaleDateString() + ".xlsx");
    }
</script>
</body>
</html>
